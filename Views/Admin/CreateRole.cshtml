@{
    ViewData["Title"] = "CreateRole";
}


@model RoleModel


<div class="bg-white p-2 shadow rounded">

    <h1>Create Role</h1>
    <form asp-action="CreateRole" asp-controller="Admin" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row mb-2">
            <div class="col">
                <label asp-for="Name">Role Adı</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Role Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>


        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>


